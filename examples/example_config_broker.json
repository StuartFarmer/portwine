{
    "strategy": {
        "class": "portwine.strategies.simple_moving_average.SimpleMovingAverageStrategy",
        "tickers": ["AAPL", "MSFT", "AMZN", "GOOGL", "META"],
        "params": {
            "short_window": 20,
            "long_window": 50,
            "position_size": 0.1
        }
    },
    "execution": {
        "class": "portwine.execution_complex.alpaca_broker.AlpacaBroker",
        "params": {
            "paper_trading": true,
            "api_key": "${ALPACA_API_KEY}",
            "api_secret": "${ALPACA_API_SECRET}"
        }
    },
    "data_loader": {
        "class": "portwine.loaders.alpaca.AlpacaMarketDataLoader",
        "params": {
            "api_key": "${ALPACA_API_KEY}",
            "api_secret": "${ALPACA_API_SECRET}",
            "timeframe": "1Day",
            "limit": 100,
            "cache_dir": "./data/alpaca_cache",
            "paper_trading": true
        }
    },
    "schedule": {
        "run_time": "market_close-15m",
        "time_zone": "US/Eastern",
        "days": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "exchange": "NYSE",
        "market_hours_only": true
    },
    "logging": {
        "level": "INFO",
        "file": "trading.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
} 